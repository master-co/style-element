{
    "scripts": {
        "build": "turbo run build --filter=./packages/*",
        "build:clean": "rm -rf ./packages/**/*dist && turbo run build --force --no-cache --filter=./packages/*",
        "check": "turbo run test lint type-check --parallel --filter=./packages/*",
        "test": "turbo run test --parallel --filter=./packages/*",
        "lint": "turbo run lint --parallel --filter=./packages/*",
        "type-check": "turbo run type-check --parallel --filter=./packages/*",
        "commit-check": "commitlint --from=HEAD~1 --verbose",
        "dev": "turbo run dev --filter=./packages/*",
        "clean": "rm -rf ./packages/**/*dist"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/master-co/style-element.git"
    },
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "devDependencies": {
        "aron-web-jest": "^1.0.0",
        "aronrepo": "^1.0.0",
        "util": "^0.12.5"
    },
    "engines": {
        "node": "^18.12.1"
    }
}
