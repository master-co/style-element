{
    "compilerOptions": {
        "jsx": "react",
        "outDir": "./dist",
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2015",
        "module": "es2020",
        "skipLibCheck": true,
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./src/**/*.d.ts"
    ]
}